<%=content_for :data_controls do%>
<%=link_to "New Video",new_spud_admin_video_path(),:class => "btn btn-primary",:title => "New Video"%>
<%end%>
<%=content_for :detail do%>
	<div class="page_list">
			<%@videos.each do |video|%>
				<div class="page_row">
					
					<span class="row_meta"><%=link_to video.name,edit_spud_admin_video_path(:id => video.id)%></span>

					<span class="edit_controls">
						<%=link_to "Remove",spud_admin_video_path(:id => video.id),:method => :delete,:class => 'btn btn-danger',:confirm => "Are you sure you want to remove this video and all items associated with it?"%>
					</span>
					<br style="clear:both;"/>
				</div>
			<%end%>
			<%=will_paginate @videos%>

	</div>


	
<%end%>
